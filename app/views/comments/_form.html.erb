<h4><%= link_to "back", movie_path(@movie.id) %>

<%= form_with(model: [@movie, @comment], local: true, class:"ui form") do |f| %>
<%= f.label :title %>
<%= f.text_field :title, required: true%>
<%= f.label :body %>
<%= f.text_field :body, required: true %>
<% f.label :user_id %>
<% f.text_field "#{current_user}"%>
<%= f.submit nil, class: "ui purple button inverted" %>

<% end %>