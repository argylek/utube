<h4><%= link_to "back", movies_path %>

<%= form_with(model: @movie, local: true, class:'ui form') do |f| %>


<%= f.label :title %>
<%= f.text_field :title, required: true%>
<%= f.label :duration%>
<%= f.text_field :duration, required: true %>
<%= f.label :genre%>
<%= f.text_field :genre, required: true %>
<%= f.label :description%>
<%= f.text_field :description, required: true %>
<%= f.label :trailer%>
<%= f.text_field :trailer, required: true %>

<%= f.submit %>
<% end %>